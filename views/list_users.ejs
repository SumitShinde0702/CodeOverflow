<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Overflow - Users list</title>
</head>

<body>
  <div class="container" style="margin-top: 20px;">
    <div style="float: left;">
      <h1>/users/list</h1>
      <table class="table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Created</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function({_id, name, gender, dob, created}) { %>
            <tr>
              <td><%= _id %></td>
              <td><%= name %></td>
              <td><%= gender === 1 ? 'Female' : 'Male' %></td>
              <td><%= dob %></td>
              <td><%= created %></td>
              <td>
                <a href="/users/<%= _id %>/edit" class="btn btn-warning btn-sm">Edit</a>
              </td>
              <td>
                <form action="/users/<%= _id %>/delete" method="post" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
